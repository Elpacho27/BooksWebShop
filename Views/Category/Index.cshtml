@{
    ViewData["Title"] = "Categories Page";
}


@model List<Category> 


<div class="container">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary" id="titlecategorylist">
                Category list
            </h2>
                
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>

    </div>

</div>
<table class="table table-bordered table-striped">
  <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
  </thead>
  <tbody>
    @foreach (var category in Model)
        {
            <tr>
                <th>
                    @category.Name
                </th>
                <th>
                    @category.DisplayOrder
                </th>
            </tr>

        }
  </tbody>
</table>